# x402-agent-pay Configuration
# Copy to .env and fill in your values

# REQUIRED: Wallet private key (with 0x prefix)
# Use a hot wallet with limited funds!
WALLET_PRIVATE_KEY=0x...

# OPTIONAL: Default network (base, ethereum, arbitrum, optimism, polygon, baseSepolia)
X402_NETWORK=base

# OPTIONAL: Custom facilitator URL (defaults to https://x402.org/facilitator)
X402_FACILITATOR_URL=https://x402.org/facilitator

# OPTIONAL: Custom registry URL for service discovery
X402_REGISTRY_URL=https://raw.githubusercontent.com/Omnivalent/x402-agent-pay/master/registry.json

# OPTIONAL: Disable protocol fee (0.5%)
# X402_DISABLE_FEE=true

# MCP Server settings (for Claude/GPT integration)
X402_WALLET_KEY=0x...
